    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel1" >

        <ImageView
            android:id="@+id/about_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/about_icon" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/about_icon"
            android:text="About Ziingo"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel2"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel2" >

        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/lock_icon" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/password_icon"
            android:text="Change Password"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor2"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel3"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel3" >

        <ImageView
            android:id="@+id/contact_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/contactus_icon" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/contact_icon"
            android:text="Contact Us"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor3"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel4"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel4" >

        <ImageView
            android:id="@+id/tc_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/termsandcond_icon" />

        <TextView
            android:id="@+id/termsncondi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tc_icon"
            android:text="Terms &amp; Conditions"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor4"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel5"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rel6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel5" >

        <ImageView
            android:id="@+id/privacy_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/pp_icon" />

        <TextView
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/privacy_icon"
            android:text="Privacy Policy"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor5"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel6"
        android:background="#D8D8D8" />

</RelativeLayout>