<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:id="@+id/rel_del_header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#FF2600" >

        <ImageView
            android:id="@+id/bkbtn11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="15dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/del_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bkbtn11"
            android:gravity="left"
            android:text="Delivery address"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aaaa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_del_header"
        android:layout_margin="10dp"
        android:background="@drawable/spinner_shape" >

        <LinearLayout
            android:id="@+id/llll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/delname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Mark Antony"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deladdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Near Hanuman Road, Smriti nagar, " />
            
             <TextView
                android:id="@+id/delloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Location, " />

            <TextView
                android:id="@+id/delcitypin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Bhilai - 412001" />

            <TextView
                android:id="@+id/delstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Chattisgarh" />

            <TextView
                android:id="@+id/delmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="Mobile - 9845214125" />

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="0.75dp"
                android:layout_marginTop="20dp"
                android:background="#848484" />

            <RelativeLayout
                android:id="@+id/bbbb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <TextView
                    android:id="@+id/chng_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit/Change address" />

                <ImageView
                    android:id="@+id/editadd_Arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>
             <View
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="0.75dp"
                android:background="#848484" />
             
              <RelativeLayout
                android:id="@+id/cccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <TextView
                    android:id="@+id/new_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add new address" />

                <ImageView
                    android:id="@+id/newadd_Arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/delplaceor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/order_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>