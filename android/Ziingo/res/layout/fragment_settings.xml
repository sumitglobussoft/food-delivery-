    <RelativeLayout
        android:id="@+id/rel_tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_chgpass" >

        <ImageView
            android:id="@+id/tc_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/termsandcond_icon" />

        <TextView
            android:id="@+id/termsncondi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tc_icon"
            android:text="Terms &amp; Conditions"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor4"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel_tc"
        android:background="#D8D8D8" />

    <RelativeLayout
        android:id="@+id/rel_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_tc" >

        <ImageView
            android:id="@+id/privacy_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="8dp"
            android:src="@drawable/pp_icon" />

        <TextView
            android:id="@+id/privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/privacy_icon"
            android:text="Privacy Policy"
            android:textColor="#6E6E6E" />
    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor5"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel_pp"
        android:background="#D8D8D8" />

</RelativeLayout>