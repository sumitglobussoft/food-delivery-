<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/his_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/his_htl_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name" />

        <TextView
            android:id="@+id/his_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="date"
            android:textColor="@color/restaurant_add"
            android:textSize="@dimen/restaurant_add" />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/his_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel_add"
        android:layout_below="@+id/his_rel"
        android:textSize="@dimen/restaurant_add"/>
    
	 <TextView 
	     android:id="@+id/his_total"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/his_add"
	     android:layout_marginTop="5dp"
	     android:text="Total: "/>

	 <ImageView
	     android:id="@+id/img_more"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignRight="@+id/his_rel"
	     android:layout_below="@+id/his_add"
	     android:src="@drawable/arrow" />

</RelativeLayout>