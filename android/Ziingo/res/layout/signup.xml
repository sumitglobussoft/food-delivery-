<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/signuptext"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#802E2E2E"
        android:gravity="center"
        android:text="SIGNUP"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/signup_btn_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/signuptext"
        android:layout_marginTop="27dp"
        android:src="@drawable/signup_with_fb" />

    <ImageView
        android:id="@+id/signup_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_btn_twitter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/signup_line" />

    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/signup_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#802E2E2E"
        android:gravity="center"
        android:hint="Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#802E2E2E"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/signup_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#802E2E2E"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/re_password"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="#802E2E2E"
        android:gravity="center"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/signup_btn" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/user" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signup_email"
        android:layout_alignLeft="@+id/signup_email"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/email" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/password" />

    <TextView
        android:id="@+id/policy_text"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#802E2E2E"
        android:gravity="center"
        android:text="By creating an account, you agree to Ziingo&apos;s Terms of Service, Privacy Policy and Content Policies."
        android:textColor="#FFFFFF"
        android:textSize="6.75sp" />

    <RelativeLayout
        android:id="@+id/rel_al"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_btn"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/already_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/already"
            android:background="@drawable/textviewclickselector"
            android:text="Login"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="Already have an account?"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/signup_btn_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signup_btn_fb"
        android:layout_below="@+id/signup_btn_fb"
        android:layout_marginTop="15dp"
        android:src="@drawable/signup_with_twitter" />

    <!--
         <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signuptext"
        android:layout_alignRight="@+id/signup_line"
        android:layout_marginBottom="17dp"
        android:src="@drawable/close" />
    -->

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/policy_text"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/textviewclickselector"
        android:layout_toRightOf="@+id/signup_btn_twitter"
        android:gravity="center"
        android:text="Skip>>"
        android:textSize="14sp" />

</RelativeLayout>